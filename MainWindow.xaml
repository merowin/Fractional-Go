<Window x:Class="Fractional_Go.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fractional_Go"
        mc:Ignorable="d"
        Title="Fractional Go" Height="500" Width="800">
    <Grid>
        <Button Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Content ="Neues Spiel" Click="ClearBoard" x:Name="NeuesSpielButton"/>

        <Button Width ="452" Height="452" Click="BoardClick" MouseMove="Button_MouseMove" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
            <Canvas Width="452" Height="452" x:Name="Board"/>
        </Button>

        <Label Content="Next Stone:                 " HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Canvas x:Name ="NextStoneCanvas" Width="50" Height="50" HorizontalAlignment="Right"/>

    </Grid>
</Window>
